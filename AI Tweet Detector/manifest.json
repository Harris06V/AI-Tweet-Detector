{
  "manifest_version": 3,
  "name": "AI Tweet Detector",
  "version": "2.0.0",
  "description": "Detects and highlights AI-generated tweets in real time using machine learning and pattern analysis",
  "permissions": [
    "storage",
    "activeTab",
    "alarms"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "ai-detector.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "ai_favicon.png"
  },
  "icons": {
    "16": "ai_favicon.png",
    "48": "ai_favicon.png",
    "128": "ai_favicon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["ai-patterns.json"],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ]
    }
  ]
}
